<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Insert</title>
</head>

<body>
	<h1>Insert New Flight</h1>
	<form id="apply" action="/submit" method="post">
		<fieldset>

        <strong><label for="name">Flight Name:</label></strong>
        <input type="text" id="name" name="name" required>

        <strong><label for="email">Some Input</label></strong>
        <input type="email" id="email" name="email" required><br> <br>

        <strong><label for="gpa">GPA:</label></strong>
        <input type="number" id="gpa" name="gpa" min="0" max="4" step="0.01" required><br> <br>

        <strong><label for="background">Background Information:</label><br></strong>
        <textarea id="background" name="background" rows="4" cols="50" required></textarea>
	</fieldset>
	<br>

        <button type="reset">Reset</button>
        <button type="submit" onclick="confirmSubmit()">Submit Application</button> <hr>
    </form>
	<a href="/">HOME</a>

	<script>
        function confirmSubmit() {
            if (window.confirm("Are you sure you want to submit your application?")) {
                document.getElementById("apply").submit();
            }
        }
    </script>

</body>

</html>
