<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Application</title>

    <style>

		body{
			color:black;
    		background-color: beige;
			font-size: large;
			
		}
	</style>
</head>
<body>
    <h1>Delete Flight</h1>
    <form id="delete" action="/delete" method="post" onsubmit="return confirmSubmit();">
        <fieldset>
            <strong><label for="passengername">Your Name: </label></strong>
            <input type="text" id="passengername" name="passengername" required>
    
            <strong><label for="crn">Flight Name/Number: </label></strong>
            <input type="text" id="crn" name="crn" required>
    
            <strong><label for="email">Email: </label></strong>
            <input type="text" id="email" name="email" required>

            <br /><br />
          <u>Credit Card # </u>
          <input type="text" id="cc1" name="cc1" maxlength="4" required />
          -
          <input type="text" id="cc2" name="cc2" maxlength="4" required />
          -
          <input type="text" id="cc3" name="cc3" maxlength="4" required />
          -
          <input type="text" id="cc4" name="cc4" maxlength="4" required />

          <br /><br />
        </fieldset>
        <br>
        <button type="submit">Submit</button> <hr>
    </form>
    
    <a href="/">HOME</a>

    <script>
        function confirmSubmit() {
            return window.confirm("Are you sure you want to delete this flight?");
        }
    </script>
</body>
</html>
