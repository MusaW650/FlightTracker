<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Application</title>
</head>

<body>
	<h1>Delete Flight</h1>
	<form id="delete" action="/delete" method="post">
		<fieldset>
            <strong><label for="passenger">Your Name: </label></strong>
            <input type="text" id="passenger" name="passenger" required>

        <strong><label for="name">Flight Name: </label></strong>
        <input type="text" id="flightname" name="flightname" required>

	</fieldset>
	<br>

        <button type="submit" onclick="confirmSubmit()">Submit</button> <hr>
    </form>
	<a href="/">HOME</a>

	<script>
        function confirmSubmit() {
            if (window.confirm("Are you sure you want to delete this flight?")) {
                document.getElementById("delete").submit();
            }
        }
    </script>

</body>

</html>